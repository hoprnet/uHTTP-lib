{
    "name": "@hoprnet/uhttp-lib",
    "version": "3.7.3-beta.4",
    "description": "u(nlinked)HTTP library",
    "author": "HOPR Association",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "files": [
        "build",
        "dist",
        "service-worker"
    ],
    "bin": {
        "uhttp-post-build-react": "node ./service-worker/post-build-uHTTP.js"
    },
    "keywords": [
        "hopr",
        "uHTTP"
    ],
    "engines": {
        "node": ">=20.0.0"
    },
    "license": "GPL-3.0",
    "scripts": {
        "prebuild": "node -p \"'export default \\'' + require('./package.json').version + '\\';'\" > src/version.ts",
        "build": "yarn build:unbandled && yarn build:minified-bundle",
        "build:unbandled": "yarn prebuild && tsc",
        "build:minified-bundle": "esbuild src/index.ts --bundle --minify --format=esm --outfile=dist/uhttp-lib.min.mjs",
        "format": "prettier --write src/ .github/ *.js *.ts *.json *.md",
        "format:ci": "prettier --check src/ .github/ *.js *.ts *.json *.md",
        "lint": "eslint --fix src/",
        "lint:ci": "eslint --max-warnings 0 src/",
        "test": "jest --coverage"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^1.5.4",
        "@types/debug": "^4.1.12",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.11.27",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "esbuild": "^0.23.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.4",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@hoprnet/uhttp-crypto": "^1.0.1",
        "debug": "^4.3.4",
        "isomorphic-ws": "^5.0.0",
        "lz-string": "^1.5.0",
        "ws": "^8.16.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
